extends ../layout

block css
    link(rel='stylesheet', href='../css/user-add.css' type="text/css")
  

block nav
    include ../nav_mixIn
    +navi('a')

block submain
  //.ad Advertising
  
block main
    article
        form(action='/aku/daftar' method='post' onsubmit='return checksubmit();')
            p
                input(type='text' id="u_id" name='u_id' maxlength="30" placeholder='Your interesting ID' required)
            span(id='idInfo')
            p
                input(type='password' id = 'u_pw' name='u_pw' maxlength="50" placeholder='Secret Password' required)
                input(type='password' id = 'u_pw2' maxlength="50" placeholder='Check Your Password One More Time')
            span(id='pwInfo')
            p
                input(type='date' name='birthday' value='2019-08-31' id='inputDate' required)
            p
                input(type='button' name='boy' id = 'boy' value='Male' class="sex" required)
                input(type='button' name='girl' id = 'girl' value='Female' class="sex" required)
                input(type="hidden" id="gender" name="gender" value="none")
            p
                input(type='text' name='email' id='email' placeholder='emailAdress@yourEmail.com' required)
            span(id='emailInfo')
            p            
                input(type="checkbox" value="check" id='check' onclick="checkboxCheck(this)")
                span I fully understand that all the contents uploaded will become the property of Beritamus and agree to share freely.
            p
                input(type='submit' value='Get my Verification Mail' id='submit')
    script(type="text/javascript" src="../../js/register.js")
