    body
        h1 Daftar
        article
            form(action='/daftar' method='post')
                p
                    input(type='text' id="u_id" name='u_id' placeholder='ID Anda' required)
                .idchecker(id="idchecker")
                p
                    input(type='password' id = 'u_pw' name='u_pw' placeholder='Password Anda' required)
                    input(type='password' id = 'u_pw2' placeholder='Cek Password Anda')
                .idchecker(id="pwchecker")
                p
                    input(type='date' name='birthday' value='2019-08-31' required)
                p
                    input(type='button' name='boy' id = 'boy' value='Laki-Laki' class="sex" required)
                    input(type='button' name='girl' id = 'girl' value='Perempuan' class="sex" required)
                    input(type="hidden" id="gender" name="gender" value="none")
                p
                    input(type='text' name='email' id='email' value='beritamus@emailAnda.com' required)
                p
                    input(type="checkbox" value="check" id='check' onclick="CheckboxCheck(this)") 
                    span I understand all the contents uploaded will become property of Beritamus and I agree to use them. 
                p
                    input(type='submit' value='' id='submit' style="visibility: hidden; width:0px;")
        
        a(href='/cari') go back
        script(type="text/javascript" src="register.js")
