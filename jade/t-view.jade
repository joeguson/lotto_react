                li
                    a(href='/penobrol') Penobrol
                li(style='border-bottom: 2px solid yellow; opacity: .9')
                    a(href='/tandya') Tandya
                br.clear
        section.sub-main(id='sub-main')
            .ad Advertisement
        section.main(id='main')
            .title
                dl.tview-dl
                    dt.tview-dt= topic.question
                    - var date_result = 'by '+ topic.author + ' /  '+datemaker(topic.date)+' / ' + 'view : ' + topic.t_view
                    dd.pview-dd #{date_result}
                    dd.tview-dd= topic.answer        
                    if hashtag
                        -for(var n=0; n<topic.hashtagcount; n++)
                            a= '#' + hashtag[Object.keys(hashtag)[n]] + ' '
                    .saveWarnButton
                        if u_id
                            button(class="save" type="submit" value="save" onclick="saveAjax(this);" id="save") Save
                            button(class="warning" type="submit" value='tan'+topic.id onclick="warningAjax(this);" id="warn") Warn
            .tcontent= topic.content
                div(id="tlikes")= topic.t_like
                if u_id
                    div(id="tlikebuttons")
                        if statusCheck == 'yes'
                            button(id="likeButton" class="tlikes" type="submit" value="Batal Suka") Batal Suka
                        else
                            button(id="likeButton" class="tlikes" type="submit" value="Suka") Suka
            if u_id
                form(action='tandya/'+topic.id method='post' id='answerForm')
                      p
                        textarea(name='answer' id="answer")
                      p
                        input(type='submit' value='submit' class="answer")  
            if answers
                .tanswer
                    ul.tanswer-ul
                        each a in answers
                            li.tanswer-li
                                dl.tanswer-dl
                                    dt.tanswer-dt= a.answer
                                    dd.tanswer-dd= a.author
                                    dd.tanswer-dd(id="tAnswerlikes"+a.id)= a.ta_like
                                    dd.tanswer-dd= a.date
                                    dd.tanswer-dd
                                        if u_id
                                            if statusCheck == 'yes'
                                                button(class="warning" type="submit" value=a.id onclick="warningAjax(this);") Batal Suka
                                            else
                                                button(class="tlikes" type="submit" value=a.id onclick="answerSendAjax(this);") Suka
                                    each ac in acomments    
                                        if ac.ta_id == a.id
                                            dl.tanswer-dl2
                                                dt.tanswer-dt= ac.content
                                                dd.tanswer-dd= ac.author
                                                dd.tanswer-dd= ac.date
                                                if u_id
                                                    button(class="warning" type="submit" value='ccc'+ac.id onclick="warningAjax(this);") Warning
                                    dd.tanswer-dd
                                    if u_id
                                        p
                                            textarea(name='acomment')
                                            input(type='submit' name=a.id class="acomment" onclick="acommentSendAjax(this);") 
