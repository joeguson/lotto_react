    body
    -var datemaker = function(date){
    -var tempdate = new Date(date);
    -var nowdate = new Date();
    -var year = tempdate.getFullYear();
    -var month = tempdate.getMonth();
    -var day = tempdate.getDate();
    -var diff = nowdate - tempdate;
    -if(diff > 864000000){return month+'-'+day+'-'+year;}
    -else{
    -if(diff > 86400000){return parseInt(diff/86400000)+' days ago';}
    -else{
    -if(diff > 3600000){return parseInt(diff/3600000)+' hours ago';}
    -else{
    -if(diff > 60000){return parseInt(diff/60000)+' minutes ago';}
    -else{return parseInt(diff/1000)+' seconds ago';}
    -}
    -}
    -}
    -}
        header
            a(href='/penobrol') Beritamus      
        nav
            ul
                li
                    a(href='/aku') Aku
                li
                    a(href='/cari') Cari
                li(style='border-bottom: 2px solid yellow; opacity: .9')
                    a(href='/penobrol') Penobrol
                li
                    a(href='/tandya') Tandya
                br.clear
        section.sub-main(id='sub-main')
            .ad Advertisement
        section.main(id='main')
            .title
                if u_id
                dl.pview-dl
                    - var date_result = 'by '+ topic.author + ' /  '+datemaker(topic.date)+' / ' + 'view : ' + topic.p_view
                    dt.pview-dt= topic.title               
                    dd.pview-dd #{date_result}             
                    dd.pview-dd= topic.com
                    if hashtag
                        -for(var n=0; n<topic.hashtagcount; n++)
                            a= '#' + hashtag[Object.keys(hashtag)[n]] + ' ' 
                    if u_id
                        .saveWarnButton
                            if u_id == topic.author
                                a(href='/pedit/'+topic.id) Edit
                            button(class="warning" type="submit" value='pen/'+topic.id+'/0/0' onclick="warningAjax(this)" id="warn/"+'pen/'+topic.id+'/0/0') Warn
            .pcontent= topic.content
                div(id="plikes")= topic.p_like
                if u_id
                    div(id="plikebuttons")
                        if statusCheck == 'yes'
                            button(id="likeButton" class="plikes" type="submit" value="Batal Suka") Batal Suka
                        else
                            button(id="likeButton" class="plikes" type="submit" value="Suka") Suka
            if u_id
                form(action='penobrol/'+topic.id method='post' id='commentForm')
                  p
                    textarea(name='comment' id="comment")
                  p
                    input(type='submit' value='submit' class="comment")
            if comments
                .pcomment
                    ul.pcomment-ul
                        each c in comments
                            li.pcomment-li
                                dl.pcomment-dl(id='pCcomment'+c.id)
                                    dt.pcomment-dt= c.content
                                    dd.pcomment-dd= c.autor
                                    dd.pcomment-dd(id="pCommentlikes"+c.id)=c.pc_like
                                    dd.pcomment-dd= c.date
                                    dd.pcomment-dd
                                        if u_id
                                            if statusCheck == 'yes'
                                                button(class="plikes" type="submit" value=c.id onclick="commentSendAjax(this);") Batal Suka
                                            else
                                                button(class="plikes" type="submit" value=c.id onclick="commentSendAjax(this);") Suka
                                    dd.pcomment-dd
                                        button(class="warning" type="submit" value='com/'+topic.id+'/'+c.id+'/0' onclick="warningAjax(this);" id="warn/"+'com/'+topic.id+'/'+c.id+'/0') Warn
                                        if u_id == c.author
                                            a(href='/pcedit/'+topic.id+'/'+c.id) Edit
                                    each cc in ccomments    
                                        if cc.pc_id == c.id
                                            dl.pcomment-dl2
                                                dd.pcomment-dt= cc.content
                                                dd.pcomment-dd= cc.author
                                                dd.pcomment-dd= cc.date
                                                    if u_id
                                                        button(class="warning" type="submit" value='pcc/'+topic.id+'/'+c.id+'/'+cc.id  onclick="warningAjax(this);" id="warn/"+'pcc/'+topic.id+'/'+c.id+'/'+cc.id) Warning
                                    dd.pcomment-dd
                                        if u_id
                                            p
                                                textarea(name='ccomment')
                                                input(type='submit' name=c.id class="ccomment" onclick="ccommentSendAjax(this);") 
