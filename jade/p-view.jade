    -if(diff > 864000000){return month+'-'+day+'-'+year;}
    -else{
    -if(diff > 86400000){return parseInt(diff/86400000)+' hari yang lalu';}
    -else{
    -if(diff > 3600000){return parseInt(diff/3600000)+' jam yang lalu';}
