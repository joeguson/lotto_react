        header
            a(href='/penobrol') Beritamus      
        nav
            ul
                li
                    a(href='/aku') Aku
                li
                    a(href='/cari') Cari
                li(style='border-bottom: 2px solid yellow; opacity: .9')
                    a(href='/penobrol') Penobrol
                li
                    a(href='/tandya') Tandya
                br.clear
        section.sub-main(id='sub-main')
            .ad Advertisement
        section.main(id='main')
            .title
                if u_id
                dl.pview-dl
                    if topic.public == 'a'
                        - var date_result = 'by '+ anonimmaker(topic.author) + ' /  '+datemaker(topic.date)+' / ' + 'view : ' + topic.p_view + ' / ' + topic.com+ ' kommentar : ' 
                    else
                        - var date_result = 'by '+ topic.author + ' /  '+datemaker(topic.date)+' / ' + 'view : ' + topic.p_view + ' / ' + topic.com+ ' kommentar : ' 
                    dt.pview-dt= topic.title               
                    dd.pview-dd
                        if hashtag
                            -for(var n=0; n<topic.hashtagcount; n++)
                                a= '#' + hashtag[Object.keys(hashtag)[n]] + ' '
                    dd.pview-dd #{date_result}
                    if u_id
                        .saveWarnButton
                            if u_id == topic.author
                                a(href='/pedit/'+topic.id) Edit
                            button(class="warning" type="submit" value='pen/'+topic.id+'/0/0' onclick="warningAjax(this)" id="warn/"+'pen/'+topic.id+'/0/0') Warn
            .pcontent= topic.content
                div(id="plikes")= topic.p_like
                if u_id
                        if statusCheck == 'yes'
                            button(id="likeButton" class="plikes" type="submit" value="Batal Suka") Batal Suka
                        else
                            button(id="likeButton" class="plikes" type="submit" value="Suka") Suka
            if u_id
                form(action='penobrol/'+topic.id method='post' id='commentForm')
                  p
                    textarea(name='comment' id="comment")
                  p
                    input(type='submit' value='submit' class="comment")
            if comments
                .pcomment
                    ul.pcomment-ul
                        each c in comments
                            li.pcomment-li
                                dl.pcomment-dl(id='pComment'+c.id)
                                    if topic.public == 'a'
                                        - var commentStart = '@'+ anonimmaker(topic.author)+" \""+c.content+"\""
                                    else
                                        - var commentStart = '@'+ topic.author+" \""+c.content+"\""
                                    dt.pcomment-dt #{commentStart}
                                        if u_id == c.author
                                            a(href='/pcedit/'+topic.id+'/'+c.id) Edit
                                    if topic.public == 'a'        
                                        - var date_result2 = 'by : '+anonimmaker(c.author)+' / '+datemaker(c.date)+' / '+c.com+' kommentar / suka : '
                                    else
                                        - var date_result2 = 'by : '+c.author+' / '+datemaker(c.date)+' / ' +c.com+' kommentar / suka : '
                                    dd.pcomment-dd #{date_result2}
                                    dd.pcomment-dd(id="pCommentlikes"+c.id)=c.pc_like
                                    if u_id
                                        dd.pcomment-dd
                                            if(commentLikeChecker(clikeStatus, c.id, u_id))
                                                button(class="plikes" type="submit" value=topic.id+'/'+c.id onclick="commentSendAjax(this);") Batal Suka
                                            else
                                                button(class="plikes" type="submit" value=topic.id+'/'+c.id onclick="commentSendAjax(this);") Suka
                                    dd.pcomment-dd
                                        if u_id
                                            button(class="warning" type="submit" value='com/'+topic.id+'/'+c.id+'/0' onclick="warningAjax(this);" id="warn/"+'com/'+topic.id+'/'+c.id+'/0') Warn
                                    each cc in ccomments    
                                        if cc.pc_id == c.id
                                            dl.pccomment-dl
                                                - var ccommentStart = '- "'+cc.content+'"'
                                                dt.pccomment-dt #{ccommentStart}
                                                if topic.public == 'a'
                                                    - var date_result3 = 'by : ' + anonimmaker(cc.author) + ' / '+datemaker(cc.date)
                                                else
                                                    - var date_result3 = 'by : ' + cc.author + ' / '+datemaker(cc.date)
                                                dd.pccomment-dd #{date_result3}
                                                    if u_id
                                                        button(class="warning" type="submit" value='pcc/'+topic.id+'/'+c.id+'/'+cc.id  onclick="warningAjax(this);" id="warn/"+'pcc/'+topic.id+'/'+c.id+'/'+cc.id) Warning
